{
  "manifest_version": 3,
  "name": "Close Firefox",
  "version": "2.0",
  "description": "Close Firefox by clicking the extension icon",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  }
